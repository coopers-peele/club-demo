{% block html_tag %}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
{% endblock html_tag %}

{% block head %}
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<title>{% block title %}{% endblock %}</title>
	<meta name="description" content="{% block description %}{% endblock %}">
	<meta name="viewport" content="{% block viewport %}width=device-width, initial-scale=1{% endblock %}">

	{% block head_style %}
		{% stylesheets filter="cssrewrite"
			'bundles/club/vendor/bootstrap/dist/css/bootstrap.min.css'
			'bundles/club/vendor/font-awesome/css/font-awesome.min.css'
			'bundles/club/css/common.css'
		%}
			<link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
		{% endstylesheets %}
	{% endblock head_style %}

	{% block head_script %}
		{% javascripts
			'bundles/club/vendor/modernizr/modernizr.min.js'
		%}
			<script src="{{ asset_url }}"></script>
		{% endjavascripts %}
	{% endblock head_script %}
</head>
{% endblock head %}

{% block body_tag %}
<body class="{% block body_class %}{% endblock %}">
{% endblock body_tag %}

{% block body_start %}
	<!--[if lt IE 7]>
		<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
	<![endif]-->
{% endblock %}

{% block body%}
	{% block header %}
		<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<i class="fa fa-bars"></i>
					</button>
					<a class="navbar-brand" href="{{ path('home') }}">{% trans %}title{% endtrans %}</a>
				</div>
				<div id="navbar" class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<li class="active"><a href="#">{% trans %}nav.home{% endtrans %}</a></li>
						<li><a href="{{ path('members') }}">{% trans %}nav.members{% endtrans %}</a></li>
						<li><a href="{{ path('activities') }}">{% trans %}nav.activities{% endtrans %}</a></li>
					</ul>
				</div>
			</div>
		</nav>
	{% endblock %}

	{% block main %}
		<div class="container">
			<div class="page-header" id="banner">
				{% block page_nav %}{% endblock %}
				<h1>{% block page_title %}{% endblock %}</h1>
			</div>
			<div class="content">
				{% block content %}{% endblock %}
			</div>
		</div>
	{% endblock %}

	<footer role="contentinfo">
		<div class="container">
			{% block footer %}{% endblock %}
		</div>
	</footer>
{% endblock %}

{% block foot_script %}
	{% javascripts
		'bundles/club/vendor/jquery/dist/jquery.min.js'
		'bundles/club/vendor/bootstrap/dist/js/bootstrap.min.js'
	%}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}

{% endblock foot_script %}

</body>
</html>
